<section>
  <div class="container mt-5">
    <h2 class="text-success mb-4">Shopping Cart</h2>

    {{#each products}}
    <div class="card mb-3">
      <div class="row g-0 align-items-center p-3">
        <div class="col-md-2">
          <img src="/product-images/{{this.product._id}}.jpg" class="img-fluid rounded" alt="{{this.product.name}}"
            style="width: 100px; height: 100px;" />
        </div>
        <div class="col-md-4">
          <h5 class="card-title text-success">{{this.product.name}}</h5>
          <p class="card-text mb-0">‚Çπ{{this.product.price}}</p>
        </div>
        <div class="col-md-3">
          <div class="btn-group" role="group">
            <button class="btn btn-success btn-sm"
              onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../user._id}}',-1)">-</button>
            <span class="mx-2 align-middle" id="qty-{{this.product._id}}">{{this.quantity}}</span>
            <button class="btn btn-success btn-sm"
              onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../user._id}}',1)">+</button>
          </div>
        </div>
        <div class="col-md-3 text-end">
          <button class="btn btn-danger btn-sm">Remove</button>
        </div>
      </div>
    </div>
    {{/each}}

    <!-- Total -->
    <div class="card p-3">
      <h5 class="text-success">Total: ‚Çπ<span id="total">{{total}}</span></h5>
      <a href="/order-details" class="btn btn-success w-100 mt-2">Checkout</a>
    </div>
  </div>
</section>


<script>
  function changeQuantity(cartId, proId, userId, count) {
    const quantitySpan = document.getElementById('qty-' + proId);
    if (!quantitySpan) {
      console.error('‚ùå Could not find quantity span for', proId);
      return;
    }

    const quantity = parseInt(quantitySpan.innerHTML);

    if (count === -1 && quantity <= 1) {
      if (!confirm("Do you want to remove this product from cart?")) return;
    }

    console.log("üì§ Sending request with:", {
      cart: cartId,
      product: proId,
      user: userId,
      count,
      quantity
    });

    $.ajax({
      url: '/change-product-quantity/' + cartId,
      method: 'post',
      data: {
        cart: cartId,
        product: proId,
        user: userId,
        count,
        quantity
      },
      success: (response) => {
        console.log("‚úÖ Received response:", response);

        if (response.removeProduct) {
          location.reload();
        } else if (response.status) {
          quantitySpan.innerHTML = quantity + count;
          document.getElementById('total').innerHTML = response.total;
        } else {
          alert("‚ùå Update failed");
        }
      },
      error: () => {
        alert("‚ùå AJAX error - request didn't reach server");
      }
    });
  }
</script>

<style>
  body {
    background-color: #f0fff4;
  }
</style>