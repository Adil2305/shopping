<section>
  <div class="container">
    <div class="row">
      <a
        href="/admin/add-products"
        class="btn btn-success ml-auto mt-5"
        style="width: auto;height:auto;"
      >Add product</a>
      <table class="table mt-5">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Title</th>
            <th scope="col">Category</th>
            <th scope="col">Discription</th>
            <th>Images</th>
          </tr>
        </thead>
        <tbody>
          {{#each products}}
            <tr>

              <th scope="row">1</th>
              <td>{{this.name}}</td>
              <td>{{this.category}}</td>
              <td>{{this.description}}</td>
              <td>{{this.price}}</td>
              <td><img
                  src="/product-images/{{this._id}}.jpg"
                  style="width: 50px; height:50px;"
                  alt="loading..."
                /></td>
              <td>
                <a
                  href="/admin/edit-product/{{this._id}}"
                  class="btn btn-primary"
                  id=""
                >Edit</a>
                <a
                  href="/admin/delete-product/{{this._id}}"
                  class="btn btn-danger"
                  id="delete-btn"
                  onclick="return confirm('are you sure want to delete {{this.name}}')"
                >Delete</a></td>

            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

  </div>
</section>